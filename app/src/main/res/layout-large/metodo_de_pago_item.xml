<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/constraintLayout_item_formas_pago_height">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewMetodosDePago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/cardView_item_formas_pago_margin_bottom"
            app:cardBackgroundColor="?attr/color_card_item"
            app:cardCornerRadius="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayoutMetodoDePago"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/imageViewIcono"
                    android:layout_width="@dimen/imageView_item_formas_pago_width"
                    android:layout_height="@dimen/imageView_item_formas_pago_width"
                    android:layout_marginStart="@dimen/imageView_item_formas_pago_margin_start"
                    android:layout_marginTop="@dimen/imageView_item_formas_pago_margin_top"
                    android:layout_marginBottom="@dimen/imageView_item_formas_pago_margin_bottom"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/peso" />

                <TextView
                    android:id="@+id/textViewDescripcion"
                    style="?attr/textview_printer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/textView_item_formas_pago_margin_start"
                    android:layout_marginTop="@dimen/textView_item_formas_pago_margin_top"
                    android:text="Efectivo"
                    app:layout_constraintStart_toEndOf="@+id/imageViewIcono"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>